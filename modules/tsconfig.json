{
  "$schema": "http://json.schemastore.org/tsconfig",
  
  "compilerOptions": {
    // Enable error reporting when local variables aren't read.
    "noUnusedLocals": true,
    // Raise an error when a function parameter isn't read.
    "noUnusedParameters": true,
    
    "declaration": true,
    
    "module": "commonjs",
    "target": "es6"
  },
  
  "exclude": ["node_modules", "lib"]
}
