{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "config",
  "title": "Config options",
  "type": "object",
  "minProperties": 1,
  "patternProperties": {
    "^.*$": {
      "anyOf": [
        { "type": "string" },
        { "type": "number" },
        { "type": "boolean" },
        { "type": "null" },
        { "$ref": "#" },
        {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        }
      ]
    }
  }
}
