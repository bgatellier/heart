{
  "name": "@fabernovel/heart-mysql",
  "version": "4.0.1",
  "description": "Store the results of analysis into a MySQL database",
  "homepage": "https://heart.fabernovel.com",
  "bugs": {
    "url": "https://github.com/bgatellier/scodi/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bgatellier/scodi.git",
    "directory": "modules/mysql"
  },
  "license": "MIT",
  "contributors": [
    "Bastien Gatellier <contact@bgatellier.fr>"
  ],
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib/**/*",
    ".env.default",
    ".env.schema.json"
  ],
  "scripts": {
    "prepublishOnly": "moon run common:build"
  },
  "dependencies": {
    "@fabernovel/heart-common": "workspace:^4.0.0",
    "@mikro-orm/core": "^5.9.7",
    "@mikro-orm/migrations": "^5.9.7",
    "@mikro-orm/mysql": "^5.9.7"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.9.7",
    "@types/node": "^18.19.6",
    "ts-node": "^10.9.1"
  },
  "peerDependencies": {
    "@fabernovel/heart-cli": "^4.0.0"
  },
  "engines": {
    "node": ">=18 <22"
  },
  "heart": {
    "id": "mysql",
    "name": "Scodi MySQL",
    "type": "listener:database",
    "service": {
      "name": "MySQL",
      "logoUrl": "https://raw.githubusercontent.com/bgatellier/heart/main/assets/images/logos/MySQL.png?v=20230726"
    }
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.config.ts"
    ]
  }
}
