{
  "name": "@fabernovel/heart-website",
  "version": "1.0.0",
  "description": "Heart's website",
  "main": "dist/index.html",
  "scripts": {
    "build": "run-s build:svg && parcel build src/index.pug",
    "build:svg": "svg-sprite --config sprite-config.json src/assets/icons/*.svg",
    "lint": "pug-lint **/*.pug && stylelint --syntax scss src/**/*.scss",
    "start": "run-s build:svg && parcel src/index.pug",
    "test": "jest --silent --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:fabernovel/heart.git"
  },
  "license": "MIT",
  "contributors": [
    "Julien Roche <julien.roche@fabernovel.com>"
  ],
  "staticFiles": {
    "staticPath": "static",
    "watcherGlob": "**"
  },
  "devDependencies": {
    "bulma": "^0.8.0",
    "cssnano": "^4.1.10",
    "jest": "^24.9.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "pug": "^2.0.4",
    "pug-lint": "^2.6.0",
    "sass": "^1.26.3",
    "stylelint": "^13.2.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.2",
    "svg-sprite": "^1.5.0",
    "npm-run-all": "^4.1.5"
  }
}
