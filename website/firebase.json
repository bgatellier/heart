{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/",
        "headers": [
          /**
           * The default-src CSP directive is set to 'self' instead of 'none' because of a bug on Firefox.
           * This bug blocks SVGs embed in <use> tags.
           **/
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; base-uri 'self'; frame-ancestors 'none';"
          },
          {
            "key": "X-Frame-Options",
            "value": "deny"
          },
          {
            "key": "Referrer-Policy",
            "value": "default, strict-origin-when-cross-origin"
          }
        ]
      },
      {
        "source": "**/*.@{html|js}",
        "headers": [{
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }]
      },
      {
        "source": "**",
        "headers": [{
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
