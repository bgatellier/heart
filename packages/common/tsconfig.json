{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
  },
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "tests/**/*.ts",
    "tests/**/*.json"
  ]
}