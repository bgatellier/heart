  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^11.10.5",
    "@types/node-fetch": "^2.3.2",
    "sort-package-json": "^1.22.1",
    "tslint": "^5.16.0",
    "typescript": "^3.4.3"
