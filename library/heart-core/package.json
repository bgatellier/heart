{
  "name": "@fabernovel/heart-core",
  "version": "1.5.0",
  "description": "Centralize helpful code needed by the others @fabernovel/heart-* modules",
  "homepage": "https://gitlab.com/fabernovel/heart/heart-core",
  "bugs": {
    "url": "https://gitlab.com/fabernovel/heart/heart-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:fabernovel/heart/heart-core.git"
  },
  "license": "MIT",
  "contributors": [
    "Bastien Gatellier <bastien.gatellier@fabernovel.com>"
  ],
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc",
    "format": "sort-package-json",
